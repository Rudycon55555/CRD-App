  <ingredients>
    <ingredient>
      <amount>2.25</amount><unit>cups</unit><item>all-purpose flour</item>
    </ingredient>
    <ingredient>
      <amount>1</amount><unit>tsp</unit><item>baking soda</item>
    </ingredient>
    <ingredient>
      <amount>1</amount><unit>tsp</unit><item>salt</item>
    </ingredient>
    <ingredient>
      <amount>1</amount><unit>cup</unit><item>unsalted butter</item><preparation>softened</preparation>
    </ingredient>
    <ingredient>
      <amount>0.75</amount><unit>cup</unit><item>sugar</item>
    </ingredient>
    <ingredient>
      <amount>0.75</amount><unit>cup</unit><item>brown sugar</item>
    </ingredient>
    <ingredient>
      <amount>2</amount><unit>units</unit><item>vanilla extract</item><unit>tsp</unit>
    </ingredient>
    <ingredient>
      <amount>2</amount><unit>units</unit><item>eggs</item>
    </ingredient>
    <ingredient>
      <amount>2</amount><unit>cups</unit><item>semi-sweet chocolate chips</item>
    </ingredient>
  </ingredients>

  <steps>
    <step number="1">
      <instruction>Preheat oven to 375°F (190°C).</instruction>
    </step>
    <step number="2">
      <instruction>Mix flour, baking soda, and salt in a bowl.</instruction>
    </step>
    <step number="3">
      <instruction>Cream butter and sugars until fluffy. Add vanilla and eggs one at a time.</instruction>
    </step>
    <step number="4">
      <instruction>Gradually add dry ingredients. Stir in chocolate chips.</instruction>
    </step>
    <step number="5">
      <instruction>Drop spoonfuls onto baking sheet. Bake for 9–11 minutes.</instruction>
      <temperature>375°F</temperature>
      <time>10 minutes</time>
      <sensory-cues>
        <smell>warm vanilla and chocolate</smell>
        <visual>golden edges</visual>
      </sensory-cues>
    </step>
  </steps>

